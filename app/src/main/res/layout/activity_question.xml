<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:padding="15dp">

    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Score: 0"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/text_view_questionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Question: 1 / X"
        android:textColor="#000"
        android:layout_below="@id/text_view_score"/>
    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="00:30"
        android:textColor="#000"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/inputQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Quelle ville turque porte le nom d'un personnage de dessin animÃ©?"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#000"
        android:layout_below="@id/text_view_questionCount"/>


        <Button
            android:id="@+id/btn_option1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="OPTION A"
            android:textAppearance="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:textColor="#f9f9f9"
            android:background="#17b15f"
            android:textSize="25sp"
            android:layout_below="@id/inputQuestion"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_option2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="OPTION A"
            android:textAppearance="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:textColor="#f9f9f9"
            android:background="#17b15f"
            android:textSize="25sp"
            android:layout_below="@id/btn_option1"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/btn_option3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="OPTION A"
            android:textAppearance="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:textColor="#f9f9f9"
            android:background="#17b15f"
            android:textSize="25sp"
            android:layout_below="@id/btn_option2"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>



</RelativeLayout>